<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coffeeImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/coffeeImg"
        android:layout_width="258dp"
        android:layout_height="163dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/coffeeName"
        app:layout_constraintStart_toStartOf="@+id/coffeeName"
        app:layout_constraintTop_toBottomOf="@+id/coffeeName"
        app:srcCompat="@drawable/fahmi_fakhrudin_nzyzausbv0m_unsplash" />

    <TextView
        android:id="@+id/coffeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java Coffee"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/coffeeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="More coffee pics!"
        app:iconTint="?attr/colorOnTertiaryFixedVariant"
        app:layout_constraintEnd_toEndOf="@+id/descriptionText"
        app:layout_constraintStart_toStartOf="@+id/descriptionText"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="50dp"
        android:text="Java beans filled with cream made in Indonesia!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="@+id/coffeeImg"
        app:layout_constraintStart_toStartOf="@+id/coffeeImg"
        app:layout_constraintTop_toBottomOf="@+id/coffeeImg" />

</androidx.constraintlayout.widget.ConstraintLayout>